# =====================================================
# PRODUCTION ENVIRONMENT VARIABLES (AWS EC2)
# Copy this to .env.production on your EC2 instance
# =====================================================

# Server Configuration
PORT=3002
NODE_ENV=production

# Database (MongoDB Atlas - PRODUCTION)
DATABASE_URL=mongodb+srv://username:password@cluster.mongodb.net/dbname?retryWrites=true&w=majority

# JWT Secrets (MUST BE DIFFERENT FROM LOCAL)
# Generate using: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-production-jwt-secret-64-chars-minimum
JWT_REFRESH_SECRET=your-production-refresh-secret-64-chars-minimum

# Frontend URL (Your production domain or EC2 IP)
FRONTEND_URL=http://YOUR_EC2_PUBLIC_IP:3000
ALLOWED_ORIGINS=http://YOUR_EC2_PUBLIC_IP:3000,https://yourdomain.com,https://www.yourdomain.com

# Google OAuth (Production credentials)
GOOGLE_CLIENT_ID=your-production-google-client-id
GOOGLE_CLIENT_SECRET=your-production-google-client-secret
GOOGLE_REDIRECT_URI=http://YOUR_EC2_PUBLIC_IP:3002/api/auth/google/callback

# Redis (Production instance - Redis Cloud recommended)
REDIS_URL=redis://default:password@redis-host:port
REDIS_HOST=redis-host
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password

# Email Service (Production - Gmail or SendGrid)
USE_GMAIL=true
EMAIL_SERVICE=gmail
EMAIL_USER=your-production-email@gmail.com
EMAIL_PASSWORD=your-gmail-app-password
FROM_EMAIL=noreply@yourdomain.com
ADMIN_EMAIL=admin@yourdomain.com
GMAIL_USER=your-production-email@gmail.com
GMAIL_APP_PASSWORD=your-gmail-app-password

# API Keys (Production)
RAPIDAPI_KEY=your-production-rapidapi-key
RAPIDAPI_HOST=apidojo-yahoo-finance-v1.p.rapidapi.com
NEWS_API_KEY=your-production-news-api-key
NEWSDATA_API_KEY=your-production-newsdata-api-key
GEMINI_API_KEY=your-production-gemini-api-key

# AMFI Data URL
AMFI_NAV_URL=https://www.amfiindia.com/spages/NAVAll.txt

# Resend API (if using)
RESEND_API_KEY=your-resend-api-key
