# =====================================================
# LOCAL DEVELOPMENT ENVIRONMENT VARIABLES
# Copy this to .env for local development
# =====================================================

# Server Configuration
PORT=3002
NODE_ENV=development

# Database
DATABASE_URL=mongodb://localhost:27017/mutual_funds_db

# JWT Secrets (generate using: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))")
JWT_SECRET=your-local-jwt-secret-key-here
JWT_REFRESH_SECRET=your-local-refresh-secret-key-here

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:5001

# Google OAuth (optional for local dev)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:3002/api/auth/google/callback

# Redis (optional - use local Redis)
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Email Service (use Mailtrap or similar for testing)
USE_GMAIL=false
EMAIL_SERVICE=mailtrap
EMAIL_USER=your-mailtrap-user
EMAIL_PASSWORD=your-mailtrap-password
FROM_EMAIL=noreply@localhost
ADMIN_EMAIL=admin@localhost

# API Keys (optional for local dev)
RAPIDAPI_KEY=your-rapidapi-key
RAPIDAPI_HOST=apidojo-yahoo-finance-v1.p.rapidapi.com
NEWS_API_KEY=your-news-api-key
NEWSDATA_API_KEY=your-newsdata-api-key
GEMINI_API_KEY=your-gemini-api-key

# AMFI Data URL
AMFI_NAV_URL=https://www.amfiindia.com/spages/NAVAll.txt
